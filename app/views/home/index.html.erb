<!-- make current temp, high, low available -->
<div style="padding-top:20px" class="row">
    <div class="column"></div>
     <% if @current %>
        <div class="column">
            <div class="row">
                <div class="column">
                    <p style="font-size:40pt;margin-bottom: 10px;">
                        <%= "#{@current['current_temp']}" %>&deg;
                    </p>
                    <%= "#{@max}" %>&deg;/
                    <%= "#{@min}" %>&deg;<br>
                </div>
                <div class="column">
                     <%= image_tag @current['icon'], alt: "weather icon", width: '200' %> 
                </div>
            </div>

            <div>
                <%= link_to search_path, { style: "font-size: 18pt; font-weight: bold;"} do %>
                    <%= image_tag("location_pin.png", alt: "location pin", height: '25', width: '25') %>
                        Columbus
                <% end %>
                <%#= link_to "Columbus", search_path, class: "a-primary" %>
            </div>
        </div>
    <% end %>
 
    <div class="column"></div>
<!-- hourly temps -->
</div>
  <div class="row">
        <% @hourly_temp.take(7).each do |hourly| %> 
            <div class="column">
                <%= hourly_convert_temp(hourly["temp"])%> <! -- 298.82 -->
                <%= Time.at(hourly["dt"]).strftime("%l %P")%>
                <%= image_tag(weather_icon(hourly["weather"].first["icon"]), alt: "weather icon") %>
            </div>                                 
        <% end %>
   </div>
<!-- no output so no need for = -->
<!-- @hourly_temp is where we dump hourly json data >