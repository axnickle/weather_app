
<h2>Search for world weather by location</h2>

<%= form_with(url: search_path, method: "get", local: true) do %>
  <%= label_tag(:location, "Enter Location name:") %>
  <%= text_field_tag(:location) %>
  <%= submit_tag("Search") %>
<% end %>

<% if @response %>
  <div>
    <%= @response.body %>
  </div>
<% end %>

<!-- this form allows user to enter a location, where the weather data can pull -->
  <!-- from OpenWeather -->
  <!--'if' statement we have @response variable which is set to response from API -->
  <!-- if we made a call in the controller -->
